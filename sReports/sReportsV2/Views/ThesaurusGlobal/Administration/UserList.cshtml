@using sReportsV2.DTOs.DTOs.GlobalThesaurusUser.DataOut;

@model List<GlobalThesaurusUserDataOut>

@{
    ViewBag.Title = "User List";
}

<div class="header header-new">
    User List
</div>
<div class="table-user">
    <table class="table table-striped table-border">
        <thead class="color-header">
            <tr class="table-header-row">
                <th style="border-bottom: unset; border-top: unset; ">@sReportsV2.Resources.TextLanguage.FirstName.ToUpper()</th>
                <th style="border-bottom: unset; border-top: unset; ">@sReportsV2.Resources.TextLanguage.SecondName.ToUpper()</th>
                <th style="border-bottom: unset;border-top: unset;">@sReportsV2.Resources.TextLanguage.BusinessEmail.ToUpper()</th>
                <th style="border-bottom: unset;border-top: unset;">@sReportsV2.Resources.TextLanguage.Affiliation.ToUpper()</th>
                <th style="border-bottom: unset;border-top: unset;">@sReportsV2.Resources.TextLanguage.Country.ToUpper()</th>
                <th style="border-bottom: unset; border-top: unset; width: 15%">@sReportsV2.Resources.TextLanguage.Phone.ToUpper()</th>
                <th style="border-bottom: unset;border-top: unset;">@sReportsV2.Resources.TextLanguage.Status.ToUpper()</th>
                <th style="border-bottom: unset; border-top: unset; width: 15%">@sReportsV2.Resources.TextLanguage.User_Role.ToUpper()</th>
                <th style="border-bottom: unset; border-top: unset; width: 3%"></th>
            </tr>
        </thead>
        <tbody>
            @foreach (GlobalThesaurusUserDataOut entry in Model)
            {
                string userBlocked = entry.Status == sReportsV2.Common.Enums.GlobalUserStatus.Blocked ? "td-user-blocked" : string.Empty;

                <tr id="row-@entry.Id" class="table-content-row ">
                    <td class="@userBlocked">@entry.FirstName</td>
                    <td class="@userBlocked">@entry.LastName</td>
                    <td class="@userBlocked">@entry.Email</td>
                    <td class="@userBlocked">@entry.Affiliation</td>
                    <td class="@userBlocked">@entry.Country</td>
                    <td class="@userBlocked">@entry.Phone</td>
                    <td class="@userBlocked">
                        @sReportsV2.Resources.TextLanguage.ResourceManager.GetString(entry.Status.ToString())
                    </td>
                    <td class="@userBlocked">
                        <div class="dropdown show">
                            <a class="user-action role-dropdown" href="#" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                <img class="edit-svg-size" src="~/Content/img/icons/edit.svg">
                                Click to edit
                            </a>
                            <div class="dropdown-menu" aria-labelledby="dropdownMenuLink">
                                <form onsubmit="updateRoles(event, this)" data-id="@entry.Id">
                                    @foreach (var role in ViewBag.Roles)
                                    {
                                        <div class="dropdown-menu-item">
                                            <label>
                                                <input value="@role.Id" name="role" id="role" type="checkbox" class="user-role" checked="@entry.IsRoleChecked(role.Id)" data-no-color-change="true">
                                                <span>@role.Name</span>
                                            </label>
                                        </div>
                                    }
                                    <div class="dropdown-menu-item">
                                        <button type="submit" class="btn w-100">Save</button>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </td>
                    <td class="@userBlocked">
                        <a class="user-action" href="#" onclick="setUserState(event, '@entry.Id', '@sReportsV2.Common.Enums.GlobalUserStatus.Blocked')"><img class="edit-svg-size" src="~/Content/img/icons/block.svg">Block</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

@Scripts.RenderFormat("<script type=\"text/javascript\" src=\"{0}?v=" + System.Reflection.Assembly.GetAssembly(typeof(sReportsV2.MvcApplication)).GetName().Version.ToString() + "\"></script>", "~/Scripts/SwissOpenOncology/userAdministration.js")