@using sReportsV2.Models.ThesaurusEntry;
@Html.Partial("ThesaurusEntryFilter")
<div class="table-responsive">
    <table class="table table-striped table-sm">
        <thead>
            <tr>
                <th>04.0MT ID</th>
                <th>@sReportsV2.Resources.TextLanguage.Definition</th>
                <th>@sReportsV2.Resources.TextLanguage.Preferred_term</th>
                <th>@sReportsV2.Resources.TextLanguage.Synonyms</th>
                <th>@sReportsV2.Resources.TextLanguage.Similar_term</th>
                <th>@sReportsV2.Resources.TextLanguage.Abbreaviations</th>
                <th></th>
            </tr>
        </thead>
        <tbody>

                @foreach (ThesaurusEntryViewModel entry in Model.Data)
                {
                    <tr id="row-@entry.Id" onclick="clickedRow(event, '@entry.Id')">
                        <td>@entry.O40MTId</td>
                        <td>@entry.GetTranslation(ViewBag.UserCookieData.ActiveLanguage as string).Definition</td>
                        <td>@entry.GetTranslation(ViewBag.UserCookieData.ActiveLanguage as string).PreferredTerm</td>
                        <td>@entry.GetSynonyms(ViewBag.UserCookieData.ActiveLanguage as string)</td>
                        <td>@entry.GetSimilarTerms(ViewBag.UserCookieData.ActiveLanguage as string)</td>
                        <td>@entry.GetAbbreaviations(ViewBag.UserCookieData.ActiveLanguage as string)</td>
                        <td>
                            <div class="dropdown show">
                                <a class="dropdown-button" href="#" role="button" id="dropdownMenuLink-@entry.Id" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                    <i class="fas fa-bars"></i>
                                </a>
                                <div class="dropdown-menu" aria-labelledby="dropdownMenuLink-@entry.Id">
                                    <a class="dropdown-item" href="#" onclick="editEntity(event,'@entry.Id')">@sReportsV2.Resources.TextLanguage.Edit</a>
                                    <!--<a class="dropdown-item" href="#">Edit</a>-->
                                    <a class="dropdown-item" href="#" onclick="removeThesaurusEntry(event,'@entry.Id', '@(entry.LastUpdate != null ? entry.LastUpdate.Value.ToString("o") : "")')">@sReportsV2.Resources.TextLanguage.Delete</a>
                                </div>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
        @if (Model.Data.Count == 0)
        {
            <div class="no-result">No result!</div>
        }
        <div class="pager-container">
            @Html.Partial("Pagination")
        </div>
    </div>
