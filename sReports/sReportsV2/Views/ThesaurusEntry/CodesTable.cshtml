@using sReportsV2.DTOs.O4CodeableConcept.DataOut;

<div class="accordion">
    <div class="header-accordion" data-toggle="collapse" data-target="#collapseCodeTable" aria-expanded="false" aria-controls="collapseCodeTable">
        @sReportsV2.Resources.TextLanguage.Codes
        <button class="btn btn-primary add-new-button" type="button" href="#" onclick="showCodeModal(event)">@sReportsV2.Resources.TextLanguage.Create</button>
    </div>
    <input type="text" id="forEditing" hidden />
    <div class="collapse" id="collapseCodeTable">
        <table id="codeTable" class="table table-striped table-responsive ">
            <thead>
                <tr>
                    <th>@sReportsV2.Resources.TextLanguage.System</th>
                    <th>@sReportsV2.Resources.TextLanguage.Version</th>
                    <th>@sReportsV2.Resources.TextLanguage.Code</th>
                    <th>@sReportsV2.Resources.TextLanguage.Value</th>
                    <th>@sReportsV2.Resources.TextLanguage.VersionPublishDate</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @if (Model != null && Model.Codes != null)
                {
                    foreach (O4CodeableConceptDataOut entry in Model.Codes)
                    {
                        <tr class="tr edit-raw">
                            <td data-property="codeSystem" data-value="@(entry.System != null ? entry.System.Value : null)">@(entry.System != null ? entry.System.Label : "")</td>
                            <td data-property="codeVersion" data-value="@entry.Version">@entry.Version</td>
                            <td data-property="codeCode" data-value="@entry.Code">@entry.Code</td>
                            <td data-property="codeValue" data-value="@entry.Value">@entry.Value</td>
                            <td data-property="codeVersionPublishDate" data-value="@entry.VersionPublishDate.Value.ToString("yyyy-MM-dd")">@entry.VersionPublishDate.Value.ToShortDateString()</td>
                            <td>
                                <div class="dropdown show">
                                    <a class="dropdown-button" href="#" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                        <i class="fas fa-bars"></i>
                                    </a>
                                    <div class="dropdown-menu">
                                        <a class="dropdown-item edit-code" href="#">@sReportsV2.Resources.TextLanguage.Edit</a>
                                        <!--<a class="dropdown-item" href="#">Edit</a>-->
                                        <a class="dropdown-item delete-code" href="#">@sReportsV2.Resources.TextLanguage.Delete</a>
                                    </div>
                                </div>
                            </td>
                        </tr>
                    }
                }

            </tbody>
        </table>
    </div>

</div>