<div class="modal fade" id="umlsModal" tabindex="-1" role="dialog" aria-labelledby="umlsModal" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">@sReportsV2.Resources.TextLanguage.UMLS_Search</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-lg-8 col-md-12">
                        <div class="row">
                            <div class="form-horizontal">
                                <div class="form-group">
                                    <label for="umlsTerm" class="control-label col-md-4">@sReportsV2.Resources.TextLanguage.UMLS_Term</label>
                                    <div class="col-md-12">
                                        <div class="term-input-container">
                                            <input type="text" name="umlsTerm" id="umlsTerm" class="form-control" value="" required placeholder="@sReportsV2.Resources.TextLanguage.UMLS_SerachFor" />
                                            <div class="search-button" onclick="searchByTerm()"><i class="fas fa-search"></i></div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div id="conceptsTableContainer" class="concept-table-container">
                            @Html.Partial("~/Views/Umls/ConceptsTable.cshtml")
                        </div>
                        <div class="concept-details-container">
                            <div class="concept-definition">
                                <div class="header-accordion" data-toggle="collapse" data-target="#collapseDefinitions" aria-expanded="false" aria-controls="collapseDefinitions">
                                    @sReportsV2.Resources.TextLanguage.SelectOneDefinitions
                                </div>
                                <div class="collapse data-container" id="collapseDefinitions">
                                    <div id="definitionsData" class="definition-data umls-clearable-content">
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-4 col-md-12">
                        <div class="atoms">
                            <div class="header-table">
                                @sReportsV2.Resources.TextLanguage.Atoms
                            </div>
                            <div id="atomsData">
                                <div class="table-responsive tableFixHead">
                                    <table class="table table-striped table-sm">
                                        <thead>
                                            <tr>
                                                <th>@sReportsV2.Resources.TextLanguage.Name</th>
                                                <th>@sReportsV2.Resources.TextLanguage.RootSource</th>
                                                <th>@sReportsV2.Resources.TextLanguage.Language</th>
                                                <th>Ui</th>
                                            </tr>
                                        </thead>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">@sReportsV2.Resources.TextLanguage.Close</button>
                <button type="button" class="btn btn-primary" onclick="confirmUmlsSelection()">@sReportsV2.Resources.TextLanguage.Confirm_selection</button>
            </div>
        </div>
    </div>
</div>
<script src="~/Scripts/sReports/umlsCodingSystem.js"></script>
