@using sReportsV2.DTOs.Umls.DatOut
@if (Model.Result.Count != 0)
{
    <div class="atoms-border atoms-fix-head">
        <table class="table table-striped">
            <thead class="color-header">
                <tr class="table-header-row">
                    <th class="unset-borders">@sReportsV2.Resources.TextLanguage.Name.ToUpper()</th>
                    <th class="unset-borders width-10">@sReportsV2.Resources.TextLanguage.RootSource.ToUpper()</th>
                    <th class="unset-borders width-10" style="padding-right: 5px">@sReportsV2.Resources.TextLanguage.Language.ToUpper()</th>
                    <th class="unset-borders width-10">UI</th>
                </tr>
            </thead>
            <tbody>
                @foreach (AtomDataOut atom in Model.Result)
                {
                    <tr class="table-content-row">
                        <td class="umls-elements" data-field="name" data-value="@atom.Name">@atom.Name</td>
                        <td class="umls-elements-bold" data-field="rootSource" data-value="@atom.RootSource">@atom.RootSource</td>
                        <td class="umls-elements-bold" data-field="language" data-value="@atom.Language">@atom.Language</td>
                        <td class="umls-elements-bold" data-field="ui" data-value="@atom.Ui">@atom.Ui</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
else
{
    <div class="table-responsive filter-border umls-clear-content">
        <table class="table table-striped table-border">
            <thead class="color-header">
                <tr class="table-header-row">
                    <th class="unset-borders">@sReportsV2.Resources.TextLanguage.Name.ToUpper()</th>
                    <th class="unset-borders">@sReportsV2.Resources.TextLanguage.RootSource.ToUpper()</th>
                    <th class="unset-borders" style="padding-right: 5px">@sReportsV2.Resources.TextLanguage.Language.ToUpper()</th>
                    <th class="unset-borders">UI</th>
                </tr>
            </thead>
        </table>
        <div class="atoms-no-result">
            <img class="margin-" src="~/Content/img/icons/no_results.svg">
            <br>
            <div class="no-result-text">@sReportsV2.Resources.TextLanguage.NoResultFound</div>
        </div>
    </div>
}