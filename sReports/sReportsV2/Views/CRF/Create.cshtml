@using sReportsV2.DTOs.Form.DataOut;
@using sReportsV2.Domain.Entities.Form;

@model FormDataOut
@{  
    ViewBag.Action = "/CRF/Create?" + ViewBag.Language;
    Layout = "~/Views/Shared/_Crf_Layout.cshtml";
}

<div class="crf-warning">
    <strong>This is currently a test system, it is not yet intended for use in a real world situation </strong> <span style="padding-left: 5px">(<a target="_blank" href="https://nianalytics.com/contact/">contact us for more information</a>)</span>
</div>
<div class="col-12">
    <h1 class="page-title">@Model.Title</h1>
    <div class="row">
        @if (ViewBag.TreeForms != null)
        {
            <div class="col-3">
                @Html.Partial("~/Views/Shared/SimpleTree.cshtml", Model)
            </div>
        }


        <div class="@(ViewBag.TreeForms != null ? "col-9": "col-12")">
            @Html.Partial("~/Views/Form/FormPartial.cshtml", Model)
        </div>
    </div>
</div>