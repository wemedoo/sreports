@using sReportsV2.DTOs.Patient
@Html.Partial("PatientFilter")
    <div class="table-responsive">
        <table class="table table-striped table-sm">
            <thead>
                <tr>
                    <th>@sReportsV2.Resources.TextLanguage.Name</th>
                    <th>@sReportsV2.Resources.TextLanguage.Family</th>
                    <th>@sReportsV2.Resources.TextLanguage.Gender</th>
                    <th>@sReportsV2.Resources.TextLanguage.Activity</th>
                    <th>@sReportsV2.Resources.TextLanguage.BirthDate</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (PatientDataOut entry in Model.Data)
                {
                    <tr id="row-@entry.Id" onclick="clickedRow(event, '@entry.Id')">
                        <td>@entry.Name</td>
                        <td>@entry.FamilyName</td>
                        <td>@entry.Gender</td>
                        <td>@(entry.Activity ? sReportsV2.Resources.TextLanguage.Active : sReportsV2.Resources.TextLanguage.Inactive)</td>
                        <td>@(entry.BirthDate != null ? entry.BirthDate.Value.ToShortDateString() : "")</td>
                        <td>
                            <div class="dropdown show">
                                <a class="dropdown-button" href="#" role="button" id="dropdownMenuLink-@entry.Id" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                    <i class="fas fa-bars"></i>
                                </a>
                                <div class="dropdown-menu" aria-labelledby="dropdownMenuLink-@entry.Id">
                                    <a class="dropdown-item" href="#" onclick="showEpisodeOfCares('@entry.Id', event)">@sReportsV2.Resources.TextLanguage.EOC_Show</a>

                                    <a class="dropdown-item" href="#" onclick="editEntity(event,'@entry.Id')">@sReportsV2.Resources.TextLanguage.Edit</a>
                                    <!--<a class="dropdown-item" href="#">Edit</a>-->
                                    <a class="dropdown-item" href="#" onclick="removePatientEntry(event, '@entry.Id', '@entry.LastUpdate.Value.ToString("o")')">@sReportsV2.Resources.TextLanguage.Delete</a>
                                </div>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
        @if (Model.Data.Count == 0)
        {
            <div class="no-result">No result!</div>
        }
        <div class="pager-container">
            @Html.Partial("Pagination")
        </div>
    </div>
