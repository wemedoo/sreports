@using sReportsV2.DTOs.Patient;
@model sReportsV2.DTOs.Patient.PatientDataOut
@{
    string hasValue = "-hasvalue";
}
<form id="newTelecomFormForPatient" onsubmit="return false">
    <div class="modal fade" id="telecomModalForPatient" tabindex="-1" role="dialog" aria-labelledby="telecomModalForPatientLabel" aria-hidden="true">
        <div class="modal-dialog modal-sm">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="telecomModalForPatientLabel">@sReportsV2.Resources.TextLanguage.Identifier_add</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">

                    <div class="form-element form-select">
                        <label class="form-element-label">@sReportsV2.Resources.TextLanguage.Telecom_System:</label>
                        <select class="form-element-field @hasValue" id="telecomSystemForPatient" name="TelecomSystemForPatient" required>
                            <option value=""></option>
                            @foreach (var systemTypeTelecom in Enum.GetNames(typeof(sReportsV2.Domain.Enums.TelecomSystemType)))
                            {
                                <option value="@systemTypeTelecom">@sReportsV2.Resources.TextLanguage.ResourceManager.GetString(systemTypeTelecom as string)</option>
                            }
                        </select>
                        <div class="form-element-bar"></div>
                    </div>

                    <div class="form-element">
                        <label class="form-element-label">@sReportsV2.Resources.TextLanguage.Telecom_Value:</label>
                        <input required class="form-element-field" type="text" id="telecomValueForPatient" name="telecomValueForPatient" />
                        <div class="form-element-bar"></div>
                    </div>

                    <div class="form-element form-select">
                        <label class="form-element-label">@sReportsV2.Resources.TextLanguage.Telecom_Use:</label>
                        <select class="form-element-field @hasValue" id="telecomUseForPatient" name="TelecomUseForPatient" required>
                            <option value=""></option>
                            @foreach (var telecomUse in Enum.GetNames(typeof(sReportsV2.Domain.Enums.TelecomUseType)))
                            {
                                <option value="@telecomUse">@sReportsV2.Resources.TextLanguage.ResourceManager.GetString(telecomUse as string)</option>
                            }
                        </select>
                        <div class="form-element-bar"></div>
                    </div>

                </div>

                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">@sReportsV2.Resources.TextLanguage.Close</button>
                    <button type="button" class="btn btn-primary" onclick="addNewTelecomForPatient(event)">@sReportsV2.Resources.TextLanguage.SaveChanges</button>
                </div>

            </div>
        </div>
    </div>
</form>