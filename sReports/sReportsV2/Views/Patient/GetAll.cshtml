@using sReportsV2.Domain.Entities.PatientEntities;
@using sReportsV2.Common.Constants;
@model PagedList.IPagedList<PatientEntity>

@{
    ViewBag.Title = @sReportsV2.Resources.TextLanguage.Patients;
    var userCookieData = ViewBag.UserCookieData;
}

@Html.Partial("Breadcrumb", new ViewDataDictionary { { "level1", @sReportsV2.Resources.TextLanguage.Patient }, { "activeLevel", 1 } })

<div class="table-container border-0">
    <div class="header header-new">
        @sReportsV2.Resources.TextLanguage.Patients
        @if (userCookieData.UserHasPermission(PermissionNames.CreateUpdate, ModuleNames.Patients))
        {
            <button class="btn btn-create float-right" onclick="createPatientEntry()"><i class="fas fa-plus-circle"></i> @sReportsV2.Resources.TextLanguage.Create</button>
        }
    </div>
    @Html.Partial("PatientFilterGroup")
    <div id="tableContainer">

    </div>

</div>
@Html.Partial("AdvancedFilterModal")

<script>
    var defaultFilter = @Html.Raw(Json.Encode(ViewBag.FilterData));
</script>

@Scripts.RenderFormat("<script type=\"text/javascript\" src=\"{0}?v=" + System.Reflection.Assembly.GetAssembly(typeof(sReportsV2.MvcApplication)).GetName().Version.ToString() + "\"></script>", "~/bundles/patientGetAll")