<div class="smart-oncology-patient-table hidden-md">
    <div class="patient-table-header">
        <span class="sidebar-patient-img">
            <img src="~/Content/open-oncology/images/icons/basic_patient_data_img.svg">
        </span>
        <span class="patient-table-header-text"> @sReportsV2.Resources.TextLanguage.Patients </span>
        <div class="tools">
            <button class="btn btn-add-new" type="button" onclick="addNewPatient()">
                <i class="fas fa-plus-circle resize-circle"></i>
                <span class="text-add-new"> @sReportsV2.Resources.TextLanguage.AddNew</span>
            </button>
            <a class="arrow toggle">
