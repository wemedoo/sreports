                </svg>
            </a>
        </div>
    </div>
    <div class="patient-table-search">
        <input type="text" class="search-btn-gt patientSearchName" placeholder="@sReportsV2.Resources.TextLanguage.Search_patient_placeholder" name="patientSearchName" value="@(Model.DataIn != null ? Model.DataIn.Name : "")" />
        <img class="search-i" id="searchIcon" src="~/Content/img/icons/search_green.svg" onclick="searchTable(event)">
    </div>
    <div class="smartOncologyPatientEntries">
        @Html.Partial("Patient/PatientEntriesTable", Model)
    </div>
</div>