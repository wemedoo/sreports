@using sReportsV2.DTOs.Encounter
    <div class="table-responsive">
        <table class="table table-striped table-sm">
            <thead>
                <tr>
                    <th>@sReportsV2.Resources.TextLanguage.Status</th>
                    <th>@sReportsV2.Resources.TextLanguage.Encounter_ServiceType_Name</th>
                    <th>@sReportsV2.Resources.TextLanguage.Encounter_Classification_Name</th>
                    <th>@sReportsV2.Resources.TextLanguage.Encounter_Type_Name</th>

                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (EncounterDataOut entry in Model.Data)
                {
                    <tr id="row-@entry.Id" onclick="clickedRow(event,'@entry.Id')">
                        <td>@sReportsV2.Resources.TextLanguage.ResourceManager.GetString(entry.Status.Label)</td>
                        <td>@sReportsV2.Resources.TextLanguage.ResourceManager.GetString(entry.ServiceType.Display)</td>
                        <td>@sReportsV2.Resources.TextLanguage.ResourceManager.GetString(entry.Class.Label)</td>
                        <td>@sReportsV2.Resources.TextLanguage.ResourceManager.GetString(entry.Type.Label)</td>
                        <td>
                            <div class="dropdown show">
                                <a class="dropwdown-button" href="#" role="button" id="dropdownMenuLink-@entry.Id" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                    <i class="fas fa-bars"></i>
                                </a>
                                <div class="dropdown-menu" aria-labelledby="dropdownMenuLink-@entry.Id">
                                    <a class="dropdown-item" href="#" onclick="editEntity(event,'@entry.Id')">@sReportsV2.Resources.TextLanguage.Edit</a>
                                    <!--<a class="dropdown-item" href="#">Edit</a>-->
                                    <a class="dropdown-item" href="#" onclick="deleteEncounter(event,'@entry.Id','@entry.LastUpdate.Value.ToString("o")')">@sReportsV2.Resources.TextLanguage.Delete</a>
                                </div>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
        @if (Model.Data.Count == 0)
        {
            <div class="no-result">No result!</div>
        }
        <div class="pager-container">
            @Html.Partial("Pagination")
        </div>
    </div>

<script src="~/Scripts/sReports/encounter.js"></script>
